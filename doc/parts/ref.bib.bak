@Article{Cordier2019,
  author          = {Cordier, Tristan and Lanz{\'{e}}n, Anders and Apoth{\'{e}}loz-Perret-Gentil, Laure and Stoeck, Thorsten and Pawlowski, Jan},
  journal         = {Trends in Microbiology},
  title           = {{Embracing Environmental Genomics and Machine Learning for Routine Biomonitoring}},
  year            = {2019},
