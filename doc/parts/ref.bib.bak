@Article{arbaciauskasAssessmentBiocontaminationBenthic2008,
  author   = {Arba{\v c}iauskas, K{\k{e}}stutis and Semenchenko, Vitaliy and Grabowski, Michal and Leuven, Rob and Paunovi{\'c}, Momir and Son, Michail and Cs{\'a}nyi, Bela and Gumuliauskait{\.e}, Simona and Konopacka, Alicja and Nehring, Stefan and {van der Velde}, Gerard and Vezhnovetz, Vasiliy and Panov, Vadim},
