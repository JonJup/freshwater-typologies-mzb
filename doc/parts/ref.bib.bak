  doi           = {10.1007/s00267-014-0231-0},
  file          = {:C\:/Users/jonat/Documents/10_Paper/Melles, Jones, Schmidt - 2014 - Evaluation of current approaches to stream classification and a heuristic guide to developing classifica.pdf:pdf},
  keywords      = {Conservation,Directional networks,Ecosystem,Freshwater,Lakes,Large-scale ecology,Rivers,Running water,Typologies,Wetlands,ecoregion,lakes,stream classification},
  mendeley-tags = {ecoregion,stream classification,lakes},
}

