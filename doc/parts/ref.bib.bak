@TechReport{wassonEuropeanHydroEcoregions2007,
  author   = {Wasson, Jean-Gabriel and Chandesris, Andr{\'e} and {Garcia-Bautista}, Ana and Pella, Herv{\'e} and Villeneuve, Bertrand},
  title    = {European {{Hydro}}-{{Ecoregions}}},
  year     = {2007},
  abstract = {The implementation of the Water Framework Directive requires a prior typology of aquatic ecosystems based on geographical features. The \guillemotleft{} Hydroecoregion \guillemotright{} (HER) approach, previously developed in France, was extended to Europe in the REBECCA project. This approach relies upon the concept of hierarchical ecosystem control. Primary determinants of the functioning of aquatic ecosystems are geology, relief and climate. The base data are geographical layers describing these factors, compiled in a GIS. The common scale of the different layers is 1/1 000 000. The geological map was interpreted according to the lithological structure and properties of the rocks (hardness, permeability, influence on water chemistry). A digital elevation model (DEM) with a pitch of 30 arc second (about 1km) was used to characterize the altitude and the slopes. Hydrogeological maps were also consulted. The climatic factors refer to precipitation (yearly average, seasonal variation) and temperature, interpreted with respect to aquatic ecosystems functioning (water balance). The delimitation of the HER was carried out visually, seeking natural discontinuities for each of the parameters and regional concordances in their distribution. The basic principle was to minimize intra-regional variance and maximize interregional differences. A total of 133 HERs was identified at the most detailed level in Europe. These HER were further classified in 9 classes of relief, 21 categories combining relief and litho-morphology, and 9 climatic classes. The concepts, methodology, and the HER map, and the detailed characterisation of these HERs are presented in this report.},
  file     = {C\:\\Users\\jonat\\Zotero\\storage\\W4LFKC57\\Wasson et al. - European Hydro-Ecoregions.pdf},
  langid   = {english},
  pages    = {45},
}

