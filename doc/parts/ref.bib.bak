@Article{Irving2018,
  author          = {Irving, Katie and Kuemmerlen, Mathias and Kiesel, Jens and Kakouei, Karan and Domisch, Sami and J{\"{a}}hnig, Sonja C.},
  journal         = {Scientific {D}ata},
  title           = {{A high-resolution streamflow and hydrological metrics dataset for ecological modeling using a regression model}},
  year            = {2018},
  pages           = {1--14},
  volume          = {5},
  abstract        = {Hydrological variables are among the most influential when analyzing or modeling stream ecosystems. However, available hydrological data are often limited in their spatiotemporal scale and resolution for use in ecological applications such as predictive modeling of species distributions. To overcome this limitation, a regression model was applied to a 1 km gridded stream network of Germany to obtain estimated daily stream flow data (m3 s−1) spanning 64 years (1950–2013). The data are used as input to calculate hydrological indices characterizing stream flow regimes. Both temporal and spatial validations were performed. In addition, GLMs using both the calculated and observed hydrological indices were compared, suggesting that the predicted flow data are adequate for use in predictive ecological models. Accordingly, we provide estimated stream flow as well as a set of 53 hydrological metrics at 1 km grid for the stream network of Germany. In addition, we provide an R script where the presented methodology is implemented, that uses globally available data and can be directly applied to any other geographical region.},
  annote          = {READ 15.03.19 WHY? I want to use the method they develop to derive mean annual discharge dat. SUMMARY & NOTES Flow regimes are important for communities and are predicted to change under climate change -> the Indicators of Hydrological ALteration statistic can be good for SDMs but requires spatially and temporally highly resolved data. Here: Regression Model to extrapolate spatially and temporally from gauging stations. DATA: i) from Global Runoff Data Centre ii) downstream accumulated precipitatiom data -------------------------- -- ABBRV -- --------------- Example Qutations ---------------------------- Citation Check ---------------------},
  doi             = {10.1038/sdata.2018.224},
  file            = {:C\:/Users/jonat/Documents/10_Paper/Irving et al. - 2018 - A high-resolution streamflow and hydrological metrics dataset for ecological modeling using a regression model.pdf:pdf},
  mendeley-groups = {Data,99_Projekte/Typology Paper},
  url             = {https://www.nature.com/articles/sdata2018224?utm_source=researcher_app&utm_medium=referral&utm_campaign=MKEF_USG_Researcher_inbound},
}

