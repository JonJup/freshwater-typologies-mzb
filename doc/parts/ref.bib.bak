@Article{petschCausesConsequencesBiotic2016,
  author     = {Petsch, Danielle Katharine},
  journal    = {International Review of Hydrobiology},
  title      = {Causes and Consequences of Biotic Homogenization in Freshwater Ecosystems},
  year       = {2016},
  issn       = {1522-2632},
  number     = {3-4},
  pages      = {113--122},
  volume     = {101},
  abstract   = {Biotic homogenization goes beyond the increase in taxonomic similarity among communities. It also involves the loss of biological differences in any organizational level (e.g., populations or communities) in terms of functional, taxonomic or genetic features. There are many ways to measure biotic homogenization, and the results depend on temporal and spatial scales, the biological group, and the richness of the communities. In freshwater ecosystems, the main investigated causes of biotic homogenization correspond to the introduction of non-native species, damming, and changes in land use. However, other natural and anthropogenic causes also increase similarity among aquatic biota, such as climatic change, changes in productivity, and flood and drought events. The consequences of biotic homogenization in freshwater ecosystems are less explored than its causes, despite its severe implications, such as lesser resistant/resilient communities, loss of ecosystem functions, and higher vulnerability to diseases. Finally, biotic homogenization is a complex process that requires attention in conservation strategies, especially because forecasts suggest that freshwater biotas will continue to become more homogeneous in the future.},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/iroh.201601850},
  doi        = {10.1002/iroh.201601850},
  file       = {C\:\\Users\\jonat\\Zotero\\storage\\N6D9DD9G\\Petsch_2016_Causes and consequences of biotic homogenization in freshwater ecosystems.pdf;C\:\\Users\\jonat\\Zotero\\storage\\BCP4WU9K\\iroh.html},
  keywords   = {Beta diversity,Biological invasions,biotic homogenization,Dams,Similarity},
  langid     = {english},
}

